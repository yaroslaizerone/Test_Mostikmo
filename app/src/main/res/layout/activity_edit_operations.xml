<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Fragments.Operation.EditOperationsActivity">
<ImageView
    android:id="@+id/BackActiv"
    android:layout_marginTop="10dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginStart="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/buttonback"
    android:clickable="true"
    android:layout_gravity="center"/>

<RadioGroup
    android:id="@+id/radioGroup3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RadioButton
        android:id="@+id/Rashod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radio_selector"
        android:button="@color/black"
        android:elevation="4dp"
        android:padding="10dp"
        android:text="Расход"
        android:textColor="@drawable/radio_text_color" />

    <RadioButton
        android:id="@+id/Dohod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radio_selector"
        android:button="@color/black"
        android:elevation="4dp"
        android:padding="10dp"
        android:text="Доход"
        android:textColor="@drawable/radio_text_color" />
</RadioGroup>

<LinearLayout
    android:layout_marginTop="10dp"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/radioGroup3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Сумма"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/InputCoast"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:gravity="right"
            android:hint="0"
            android:textSize="28dp"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₽"
            android:textColor="@color/black"
            android:textSize="28dp" />
    </LinearLayout>
</LinearLayout>

<HorizontalScrollView
    android:id="@+id/horizontalScrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

    <RadioGroup
        android:id="@+id/radioGroup4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Дети"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Забота о себе"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Зарплата"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Продукты"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Кафе и рестораны"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Корректировка"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Машина"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Образование"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Отдых и развлечения"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Платежи и комиссии"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Подарки"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Покупки: одежда, техника"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Проезд"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/r14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Здоровье и фитнес"
            android:textColor="@drawable/radio_text_color" />
    </RadioGroup>
</HorizontalScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bankbuildingicon"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="287dp"
            android:layout_marginStart="60dp"/>
        <Spinner
            android:id="@+id/typeMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="28dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tearoffcalendar"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="287dp"
            android:layout_marginStart="60dp"/>

        <DatePicker
            android:id="@+id/datePickerOperation"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/location"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="287dp"
            android:layout_marginStart="60dp"/>
        <Spinner
            android:id="@+id/typeUserLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="28dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/speechbubble"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="287dp"
            android:layout_marginStart="60dp"/>
        <EditText
            android:id="@+id/commentUser"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Добавьте комментарий"
            android:textSize="18dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <Button
            android:id="@+id/EditBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Изменить"
            android:background="@drawable/roundbuttonuix"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/DeleteBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить"
            android:background="@drawable/roundbuttonuix"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>


</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>